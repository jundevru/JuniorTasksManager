<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TasksManagerClient.Dictionaryes">
    
    <Style x:Key="InfoBorder" TargetType="Border">
        <Setter Property="Margin" Value="3,2,3,2"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource ImagesBorderColor}"/>
        <Setter Property="Background" Value="{StaticResource LeftBackgroundColor}"/>
        <Setter Property="CornerRadius" Value="0,5,5,0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
</ResourceDictionary>