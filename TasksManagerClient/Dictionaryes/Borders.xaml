<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TasksManagerClient.Dictionaryes">
    
    <Style x:Key="InfoBorder" TargetType="Border">
        <Setter Property="Margin" Value="2,2,2,2"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="BorderBrush" Value="{StaticResource ImagesBorderColor}"/>
        <Setter Property="Background" Value="{StaticResource LeftBackgroundColor}"/>
        <Setter Property="CornerRadius" Value="3,3,3,3"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>
</ResourceDictionary>