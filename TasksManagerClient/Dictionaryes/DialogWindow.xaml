<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:TasksManagerClient.Dictionaryes">

    <Style x:Key="DialogWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="ResizeMode" Value="CanResizeWithGrip"/>
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="DialogWindowBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource LeftBackgroundColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource RightBackgroundColor}"/>
    </Style>

    <Style x:Key="DialogWindowHeaderBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Background" Value="{StaticResource TopBackgroundColor}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>